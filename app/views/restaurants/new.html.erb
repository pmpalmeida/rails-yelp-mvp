<h1>NEW</h1>


<div class='row'>
  <div class='col-md-6'>


  <%= form_for(@restaurant) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"], {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_area :address, class: 'form-control', rows: 10 %>
  </div>

  <%= f.submit 'Salvar', class: 'btn btn-primary btn-block' %>
<%end%>



  </div>
</div>
